<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Address: <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info <-->
    <h4>Main Info</h4>
    <p>Name: <%= @event.name %></p>
    <p><%= @event.location %> </p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>
    </ul>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>

<!-- Themes -->
<h4>Themes</h4>
<% @categories.each do |cat| %>
  <span class="label label-success"><%= cat.name %></span>
<% end %>
